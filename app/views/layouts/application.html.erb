<!DOCTYPE html>
<html>
<head>
  <title>VisualCraigslist</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<header>
		<div class="navbar navbar-inverse navbar-static-top" style="position: static;">
	    	<div class="navbar-inner">
	        	<div class="container">
	            	<a class="brand" href="#">Visual Craigslist</a>
					<div class="nav-collapse collapse navbar-inverse-collapse">
						<form class="navbar-search pull-left" action="">
							<input name="searchTerm" type="text" class="search-query span2" placeholder="Search">
							<button type="button" class="btn btn-primary search">Search</button>
						</form>
					</div><!-- /.nav-collapse -->
				</div>
			</div><!-- /navbar-inner -->
		</div>
	</header>
	<section class="body">
		<%= yield %>
	</section>

<script id="listingTpl" type="text/x-handlebars-template">
  {{#pics}}
  	<a href="{{../link}}">
  		<span class="title">{{../title}}</span>
  		<img src="{{.}}"/>
  	</a>
  {{/pics}}
  {{^pics}}
  	<a href="{{../link}}">
  		<span class="title">{{../title}}</span>
  		<img src="assets/no-photo.jpeg"/>
  	</a>
  {{/pics}}
</script>

</body>
</html>
